<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content" 
    android:layout_width="fill_parent">
	<RelativeLayout
	    android:layout_height="wrap_content" 
	    android:paddingBottom="4dip"
	    android:layout_width="fill_parent"
	    android:background="@color/transparent"
	    android:id="@+id/subcontent">
	    <ImageView 
	        android:layout_height="85dp"
	        android:layout_width="85dp"
	        android:layout_centerHorizontal="true"
	        android:id="@+id/rfitemImage"
	        android:background="@drawable/grid_blp" 
	        android:layout_marginTop="10dp">
	    </ImageView>
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_below="@+id/rfitemImage"
	        android:layout_height="wrap_content" 
	        android:layout_centerHorizontal="true" 
	        android:layout_marginTop="5dp"
	        android:id="@+id/rfitemText"
	        android:text="@string/blpSTR"
	        android:textSize="15sp"
	        android:textColor="@color/highhui">
	    </TextView>
	</RelativeLayout>
</RelativeLayout>