<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical" 
    android:layout_marginTop="10dp"
    android:alpha="0.9"
    android:background="@drawable/shap_dialog">
    
    <ImageView 
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:src="@drawable/erro_img"/>
    <TextView 
        android:id="@+id/erroTx"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="10dp"
        android:textColor="@color/qianhei"
        android:textSize="16sp"
        android:text="@string/deleteMessage"/>
      
    <RelativeLayout 
        android:layout_marginTop="10dp"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView 
            android:layout_alignParentTop="true"
        	android:layout_width="fill_parent"
        	android:layout_height="1dp"
        	android:background="@color/hui"/>
        <TextView 
            android:id="@+id/centerTx"
            android:layout_width="1dp"
            android:layout_centerInParent="true"
            android:layout_height="fill_parent"
            android:background="@color/hui"/>
        <Button 
            android:layout_toLeftOf="@id/centerTx"
        	android:id="@+id/del_cancel"
        	android:layout_width="fill_parent"
        	android:layout_height="fill_parent"
        	android:layout_gravity="left"
        	android:gravity="center"
        	android:textSize="16sp"
        	android:textStyle="bold"
        	android:textColor="@color/light_blue"
        	android:background="@drawable/shap_del_btn"
        	android:text="@string/Cancel"/>
        <Button 
        	android:id="@+id/del_ok"
        	android:layout_toRightOf="@id/centerTx"
        	android:gravity="center"
        	android:layout_width="fill_parent"
        	android:layout_height="fill_parent"
        	android:layout_gravity="right"
        	android:textSize="16sp"
        	android:textStyle="bold"
        	android:textColor="@color/light_blue"
        	android:background="@drawable/shap_del_btn"
        	android:text="@android:string/ok"/>
    </RelativeLayout>

</LinearLayout>
