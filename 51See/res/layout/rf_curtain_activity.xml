<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
	android:background="@color/qianhui">
    <RelativeLayout
        android:id="@+id/devInfo_topLayout" 
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:background="@color/title_bac"
        android:layout_alignParentTop="true">
        <LinearLayout 
            android:id="@+id/curtain_back_layout"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:background="@drawable/shap_menu_linearlayout"
            android:orientation="horizontal">
            <ImageView 
                android:layout_width="30dp"
            	android:layout_height="30dp"
            	android:layout_marginLeft="10dp"
            	android:layout_gravity="center_vertical"
                android:background="@drawable/back_img_shap"/>
        </LinearLayout>
        
        <TextView 
            android:id="@+id/curtain_titleName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="窗帘"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:textColor="@color/qianhei"/>
    </RelativeLayout>
    <ImageView 
        android:layout_below="@id/devInfo_topLayout"
        android:id="@+id/divid_img"
        android:layout_width="fill_parent"
        android:layout_height="4dp"
        android:scaleType="fitXY"
        android:src="@drawable/progress_buffering"/>
    <RelativeLayout 
        android:id="@+id/btnLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <RelativeLayout 
        android:visibility="gone"
        android:id="@+id/curtainLayout"
        android:layout_width="fill_parent"
        android:layout_marginTop="100dp"
        android:layout_height="wrap_content">
        <FrameLayout 
        android:id="@+id/loading_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">
        <ProgressBar 
            android:visibility="gone"
            android:id="@+id/open_progress"
        	android:layout_gravity="center_horizontal"
        	android:layout_width="270dp"
            android:layout_height="210dp"
        	android:indeterminate="false"
        	android:indeterminateDrawable="@anim/curtain_close_loading"/>
        <ProgressBar 
            android:visibility="gone"
            android:id="@+id/close_progress"
        	android:layout_gravity="center_horizontal"
        	android:layout_width="270dp"
            android:layout_height="210dp"
        	android:indeterminate="false"
        	android:indeterminateDrawable="@anim/curtain_open_loading"/>
        <ImageView 
            android:id="@+id/pauseImg"
            android:layout_width="270dp"
            android:layout_height="210dp"
            android:background="@drawable/curtain04"/>
    </FrameLayout>
    
    	<LinearLayout 
        android:layout_marginTop="10dp"
        android:layout_below="@id/loading_frame"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">
        <Button 
        	android:id="@+id/open"
        	android:layout_weight="1"
        	android:layout_width="65dp"
        	android:layout_height="65dp"
        	android:text="打开"
        	android:textColor="@color/qianhei"
        	android:textSize="15sp"
        	android:layout_margin="10dp"
        	android:background="@drawable/shap_curtain_btn"/>
        <Button 
        	android:id="@+id/pause"
        	android:layout_weight="1"
        	android:layout_width="65dp"
        	android:layout_height="65dp"
        	android:text="暂停"
        	android:layout_margin="10dp"
        	android:textColor="@color/qianhei"
        	android:textSize="15sp"
        	android:background="@drawable/shap_curtain_btn"/>
        <Button 
        	android:id="@+id/close"
        	android:layout_weight="1"
        	android:layout_width="65dp"
        	android:layout_height="65dp"
        	android:text="关闭"
        	android:layout_margin="10dp"
        	android:textColor="@color/qianhei"
        	android:textSize="15sp"
        	android:background="@drawable/shap_curtain_btn"/>
    	</LinearLayout>
    </RelativeLayout>
    
    <LinearLayout 
        android:visibility="visible"
        android:id="@+id/switchLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical">
    	<LinearLayout 
    	    android:id="@+id/swtichGroup1"
    	    android:layout_width="fill_parent"
    	    android:layout_height="wrap_content"
    	    android:layout_marginTop="20dp"
    	    android:layout_gravity="center"
            android:background="#96CDCD"
            android:gravity="center">
        	<LinearLayout 
            android:id="@+id/mSwitchL1"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:background="#96CDCD"
            android:gravity="center">
            <com.my51c.see51.widget.NewSwitch
                android:id="@+id/mSwitch1"
        		android:layout_marginTop="10dp"
        		android:background="@drawable/phone_my_setting_switch_selected_new"
        		android:textColor="@android:color/white"
        		android:textSize="14sp"
        		android:paddingLeft="5dp"
        		android:paddingRight="5dp"
        		android:layout_width="58dp"
        		android:layout_height="25dp"
        		android:layout_marginLeft="10dp"
        		android:layout_marginRight="10dp"/>
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:textColor="@color/qianhei"
                android:text="@string/rf_switch1"/>
        	</LinearLayout>
        </LinearLayout>
        <LinearLayout 
            android:visibility="gone"
            android:id="@+id/swtichGroup2"
    	    android:layout_width="fill_parent"
    	    android:layout_height="80dp"
    	    android:layout_marginTop="20dp"
    	    android:layout_gravity="center"
            android:background="#96CDCD"
            android:gravity="center">
        	<LinearLayout 
            android:id="@+id/mSwitchL2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:background="#96CDCD"
            android:gravity="center">
            <com.my51c.see51.widget.NewSwitch
                android:id="@+id/mSwitch2"
        		android:layout_marginTop="10dp"
        		android:background="@drawable/phone_my_setting_switch_selected_new"
        		android:textColor="@android:color/white"
        		android:textSize="14sp"
        		android:paddingLeft="5dp"
        		android:paddingRight="5dp"
        		android:layout_width="58dp"
        		android:layout_height="25dp"
        		android:layout_marginLeft="10dp"
        		android:layout_marginRight="10dp"/>
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:textColor="@color/qianhei"
                android:text="@string/rf_switch2"/>
        	</LinearLayout>
        </LinearLayout>
        <LinearLayout 
            android:visibility="gone"
            android:id="@+id/swtichGroup3"
    	    android:layout_width="fill_parent"
    	    android:layout_height="wrap_content"
    	    android:layout_marginTop="20dp"
    	    android:layout_gravity="center"
            android:background="#96CDCD"
            android:gravity="center">
        	<LinearLayout 
            android:id="@+id/mSwitchL3"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:background="#96CDCD"
            android:gravity="center">
            <com.my51c.see51.widget.NewSwitch
                android:id="@+id/mSwitch3"
        		android:layout_marginTop="10dp"
        		android:background="@drawable/phone_my_setting_switch_selected_new"
        		android:textColor="@android:color/white"
        		android:textSize="14sp"
        		android:paddingLeft="5dp"
        		android:paddingRight="5dp"
        		android:layout_width="58dp"
        		android:layout_height="25dp"
        		android:layout_marginLeft="10dp"
        		android:layout_marginRight="10dp"/>
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:textColor="@color/qianhei"
                android:text="@string/rf_switch3"/>
        	</LinearLayout>
        </LinearLayout>
    </LinearLayout>
    </RelativeLayout>
    <RelativeLayout 
        android:id="@+id/changeDevName"
        android:layout_below="@+id/btnLayout"
        android:layout_marginTop="50dp"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:padding="10dp">
        <TextView 
            android:id="@+id/curtainName"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="@color/qianhei"
            android:textSize="15sp"
            android:text="curtain"/>
        <TextView 
            android:id="@+id/mentionTx"
            android:layout_toRightOf="@id/curtainName"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="@color/highhui"
            android:textSize="13sp"
            android:text="@string/changedevicename"/>
        <ImageView 
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/arrow"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

</RelativeLayout>
