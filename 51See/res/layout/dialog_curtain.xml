<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
	android:background="@color/qianhui">
    <RelativeLayout 
        android:id="@+id/curtainLayout"
        android:layout_width="fill_parent"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">
        <FrameLayout 
        android:id="@+id/loading_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">
        <ProgressBar 
            android:visibility="gone"
            android:id="@+id/open_progress"
        	android:layout_gravity="center_horizontal"
        	android:layout_width="270dp"
            android:layout_height="210dp"
        	android:indeterminate="false"
        	android:indeterminateDrawable="@anim/curtain_close_loading"/>
        <ProgressBar 
            android:visibility="gone"
            android:id="@+id/close_progress"
        	android:layout_gravity="center_horizontal"
        	android:layout_width="270dp"
            android:layout_height="210dp"
        	android:indeterminate="false"
        	android:indeterminateDrawable="@anim/curtain_open_loading"/>
        <ImageView 
            android:id="@+id/pauseImg"
            android:layout_width="270dp"
            android:layout_height="210dp"
            android:background="@drawable/curtain04"/>
    </FrameLayout>
    
    	<LinearLayout 
        android:layout_marginTop="5dp"
        android:layout_below="@id/loading_frame"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">
        <Button 
        	android:id="@+id/open"
        	android:layout_weight="1"
        	android:layout_width="65dp"
        	android:layout_height="65dp"
        	android:text="打开"
        	android:textColor="@color/qianhei"
        	android:textSize="15sp"
        	android:layout_margin="10dp"
        	android:background="@drawable/shap_curtain_btn"/>
        <Button 
        	android:id="@+id/pause"
        	android:layout_weight="1"
        	android:layout_width="65dp"
        	android:layout_height="65dp"
        	android:text="暂停"
        	android:layout_margin="10dp"
        	android:textColor="@color/qianhei"
        	android:textSize="15sp"
        	android:background="@drawable/shap_curtain_btn"/>
        <Button 
        	android:id="@+id/close"
        	android:layout_weight="1"
        	android:layout_width="65dp"
        	android:layout_height="65dp"
        	android:text="关闭"
        	android:layout_margin="10dp"
        	android:textColor="@color/qianhei"
        	android:textSize="15sp"
        	android:background="@drawable/shap_curtain_btn"/>
    	</LinearLayout>
    </RelativeLayout>

</RelativeLayout>
