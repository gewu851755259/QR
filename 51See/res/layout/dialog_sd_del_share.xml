<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:background="@drawable/shap_dialog">
    
    <RelativeLayout 
        android:id="@+id/share"
        android:background="@drawable/shap_layout_click"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageView 
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/dialog_share"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="60dp"
            android:textColor="@color/qianhei"
            android:text="@string/_share"/>
        <View 
            android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/hui"/>
    </RelativeLayout>
    
    <RelativeLayout 
        android:id="@+id/delete"
        android:background="@drawable/shap_layout_click"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageView 
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/dialog_delete"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="60dp"
            android:textColor="@color/qianhei"
            android:text="@string/delete_str"/>
    </RelativeLayout>
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/hui"/>
    <RelativeLayout 
        android:id="@+id/cancel"
        android:background="@drawable/shap_layout_click"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageView 
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/dialog_cancel"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="60dp"
            android:textColor="@color/qianhei"
            android:text="@string/_cancel"/>
    </RelativeLayout>
    

</LinearLayout>
