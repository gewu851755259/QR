<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/qianhui">
    
    <RelativeLayout
        android:id="@+id/devInfo_topLayout" 
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@color/title_bac"
        android:layout_alignParentTop="true">
        <LinearLayout 
            android:id="@+id/add_back_layout"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:background="@drawable/shap_menu_linearlayout"
            android:orientation="horizontal">
            <ImageView 
                android:layout_width="35dp"
            	android:layout_height="35dp"
            	android:layout_marginLeft="10dp"
            	android:layout_gravity="center_vertical"
                android:background="@drawable/back_img_shap"/>
        </LinearLayout>
        <TextView 
            android:id="@+id/guid_device_id_title"
            android:layout_width="wrap_content"
           	android:layout_height="wrap_content"
          	android:textColor="@color/qianhei"
           	android:textSize="18sp"
           	android:layout_centerInParent="true"
           	android:text="@string/add"/>
    </RelativeLayout>
    
    <ImageView 
        android:id="@+id/divid_img"
        android:layout_width="fill_parent"
        android:layout_height="4dp"
        android:scaleType="fitXY"
        android:src="@drawable/progress_buffering"/>
    
    <TextView
        style="@style/textFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="20dp"
        android:text="@string/scaningrfdimensioncode" />
	
    <LinearLayout
            android:background="@drawable/shap_trans_stork"
            android:orientation="horizontal" 
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
        	android:layout_height="50dp"
        	android:gravity="center_vertical">
			 <ImageView
		         android:id="@+id/imageViewWifi"
		         android:layout_width="25dp"
		         android:layout_height="25dp"
		         android:layout_marginLeft="5dp"
		         android:background="@drawable/adddevice" />
	      	  <com.xqe.method.DelEditText
	          	 android:id="@+id/edtRFId"
	        	 android:layout_height="35dp"
	             android:layout_width="0dp"
	             android:layout_weight="1"
	             android:windowSoftInputMode="stateHidden"
	             android:background="@color/white"
	             android:drawableRight="@drawable/icon_clear"
	       		 android:singleLine="true"
	        	 android:textSize="14sp"
	        	 android:textColor="@color/qianhei"
	        	 android:layout_marginLeft="10dp"
	             />
	      	  <ImageButton 
	      	      android:id="@+id/imgBtnDimension"
	      	      android:layout_width="30dp"
		          android:layout_height="30dp"
		          android:background="@drawable/dimentional_code"
		         />
		 </LinearLayout>
    <Button
        android:visibility="gone"
        android:id="@+id/btnAddRFDevice"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/button_shap"
        android:text="@string/add"
        android:textColor="@color/white"/>
</LinearLayout>
