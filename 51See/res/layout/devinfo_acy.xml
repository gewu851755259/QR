<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/deviceInfo_panel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/white">
    <RelativeLayout
        android:id="@+id/devInfo_topLayout" 
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@color/title_bac"
        android:layout_alignParentTop="true">
        <LinearLayout 
            android:id="@+id/back_layout"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:background="@drawable/shap_menu_linearlayout"
            android:orientation="horizontal">
            <ImageView 
                android:layout_width="30dp"
            	android:layout_height="30dp"
            	android:layout_marginLeft="10dp"
            	android:layout_gravity="center_vertical"
                android:background="@drawable/back_img_shap"/>
        </LinearLayout>
        
        <TextView 
            android:id="@+id/titleName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/deviceinfomation"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/qianhei"/>
    </RelativeLayout>
    <ImageView 
        android:id="@+id/divid_img"
        android:layout_width="fill_parent"
        android:layout_height="4dp"
        android:scaleType="fitXY"
        android:src="@drawable/progress_buffering"/>
	
    <!-- 上半部分信息layout -->
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
  	<LinearLayout
  	    android:id="@+id/devinfo_up_content"
        android:layout_width="match_parent"
      	android:layout_height="wrap_content"
      	android:layout_centerVertical="true"
        android:orientation="horizontal">
  	    <LinearLayout
	        android:layout_width="match_parent"
	      	android:layout_height="wrap_content"
	      	android:gravity="center_vertical"
	        android:orientation="horizontal">
	        <LinearLayout
	        	android:layout_width="wrap_content"
	      		android:layout_height="wrap_content"
	        	android:orientation="vertical"
	        	android:gravity="center_vertical">
	        	<ImageView
		            android:id="@+id/snapshot"
		            android:layout_width="100dp"
		            android:layout_height="80dp"
		            android:scaleType="fitXY"
		            android:padding="5dp"
		            android:layout_marginLeft="5dp"
		            android:contentDescription="@string/none"
		            android:src="@drawable/cam_default_icon"
		            android:background="@drawable/img_bac" />
  	    	</LinearLayout>
  	    	<LinearLayout
	        	android:layout_width="wrap_content"
	      		android:layout_height="wrap_content"
	        	android:orientation="vertical"
	        	android:layout_marginLeft="10dp"
	        	android:layout_gravity="center_vertical"
	        	android:gravity="center_vertical">
	        	<LinearLayout 
	        	    android:id="@+id/renameLayout"
	        	    android:layout_width="wrap_content"
	        	    android:layout_height="wrap_content"
	        	    android:orientation="horizontal"
	        	    android:background="@drawable/shap_menu_linearlayout"
	        	    android:gravity="center_vertical">
	        	    <TextView
	                	android:id="@+id/devinfo_devName"
	                	android:layout_width="wrap_content"
	                	android:layout_height="wrap_content"
	                	android:textSize="18sp" 
	                	android:clickable="false"
	                	android:textColor="@color/orange"
	                	android:text="cam"/>
	        	    <ImageView 
	        	        android:id="@+id/editImg"
	        	        android:layout_width="25dp"
	        	        android:layout_height="25dp"
	        	        android:layout_marginLeft="10dp"
	        	        android:layout_gravity="center_vertical"
	        	        android:src="@drawable/rename_img"/>
	        	</LinearLayout>
           		<TextView
	                android:id="@+id/serialNumberGvap"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textSize="13sp" 
	                android:text="a0805486873"
	                android:textColor="@color/shenhui" />
  	    	</LinearLayout>
  	    </LinearLayout>
  	    </LinearLayout>
  	    <LinearLayout 
  	        android:layout_centerVertical="true"
  	        android:layout_alignParentRight="true"
  	        android:layout_marginRight="10dp"
  	        android:gravity="center"
  	    			android:layout_width="wrap_content"
  	    			android:layout_height="wrap_content"
  	    			android:orientation="horizontal"
  	    			android:layout_marginLeft="15dp">
           		<LinearLayout 
           		    android:id="@+id/btn_removeDevice"
           		    android:layout_width="wrap_content"
           		    android:layout_height="wrap_content"
           		    android:orientation="vertical">
           		    <ImageView 
           		        android:clickable="false"
  	        			android:layout_width="25dp"
  	        			android:layout_height="25dp"
  	        			android:layout_gravity="center"
  	        			android:textColor="@color/white"
  	        			android:background="@drawable/del_dev_img"/>
           		    <TextView
           		        android:layout_marginTop="2dp"
           		        android:textSize="12sp"
           		        android:layout_width="wrap_content"
           		        android:layout_height="wrap_content"
           		        android:textColor="@color/qianhei"
           		        android:text="@string/deleteLanDev"/>
           		</LinearLayout>
           		<TextView 
           		    android:layout_width="1dp"
           		    android:layout_height="fill_parent"
           		    android:layout_marginLeft="10dp"
           		    android:layout_marginRight="10dp"
           		    android:layout_marginBottom="5dp"
           		    android:background="@color/qianhui"/>
           		<LinearLayout 
           		    android:id="@+id/btn_update_location"
           		    android:layout_width="wrap_content"
           		    android:layout_height="wrap_content"
           		    android:orientation="vertical">
           		    <ImageView
           		        android:clickable="false" 
  	        			android:layout_width="25dp"
  	        			android:layout_height="25dp"
  	        			android:layout_gravity="center"
  	        			android:textColor="@color/white"
  	        			android:background="@drawable/update_location_img"/>
           		    <TextView
           		        android:layout_marginTop="2dp"
           		        android:textSize="12sp"
           		        android:layout_width="wrap_content"
           		        android:layout_height="wrap_content"
           		        android:textColor="@color/qianhei"
           		        android:text="@string/update_location"/>
           		</LinearLayout>
  	    			
  				
   	</LinearLayout>
   	</RelativeLayout>
   	 <TextView 
  	        android:layout_width="fill_parent" 
  	        android:layout_height="1dp"
  	        android:layout_marginTop="10dp"
  	        android:background="@color/qianhui"/>
  	    <LinearLayout 
  			android:layout_width="fill_parent"
  		  	android:layout_height="15dp"
  	    	android:orientation="horizontal"
  	    	android:layout_margin="15dp"
  	    	android:gravity="center">
  			<TextView
	            android:id="@+id/txtSoftVersion"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="软件版本：15-0815"
	            android:textSize="12sp"
	            android:textColor="@color/shenhui"/>
           <TextView
                android:id="@+id/txtHardwareVersion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="硬件版本：15-0914"
                android:textSize="12sp"
                android:layout_marginLeft="10dp"
               	android:textColor="@color/shenhui"/>
  		</LinearLayout>
  		<ImageView 
        	android:layout_width="fill_parent"
        	android:layout_height="10dp"
        	android:scaleType="fitXY"
        	android:background="@color/qianhui"/>
  	
  	 <!-- 下半部分信息layout -->
  	 <RelativeLayout 
  	     android:padding="20dp"
  	     android:layout_width="match_parent"
  	     android:layout_height="match_parent"
  	     android:gravity="center">
  	     
  	<LinearLayout 
  	    android:id="@+id/l1"
  	    android:layout_width="fill_parent"
  	    android:layout_height="wrap_content"
  	    android:orientation="horizontal"
  	    android:gravity="center_vertical">
  	    <LinearLayout 
  	    android:id="@+id/btn_settings"
  	    android:layout_weight="1"
  	    android:layout_width="wrap_content"
  	    android:layout_height="wrap_content"
  	    android:orientation="vertical"
  	    android:gravity="center">
  	    <ImageView 
  	        android:layout_width="80dp"
  	        android:layout_height="80dp"
  	        android:src="@drawable/shap_setting"/>
  	    <TextView 
  	        android:layout_width="wrap_content"
  	        android:layout_height="wrap_content"
  	        android:text="@string/setting"
  	        android:textSize="15sp"
  	        android:textColor="@color/qianhei"/>
  		</LinearLayout>
  		
  	    <LinearLayout 
  	    android:id="@+id/btn_rfdevice"
  	    android:layout_weight="1"
  	    android:layout_width="wrap_content"
  	    android:layout_height="wrap_content"
  	    android:orientation="vertical"
  	    android:layout_marginTop="2dp"
  	    android:gravity="center">
  	    <ImageView 
  	        android:layout_width="80dp"
  	        android:layout_height="80dp"
  	        android:src="@drawable/shap_rf"/>
  	    <TextView 
  	        android:layout_width="wrap_content"
  	        android:layout_height="wrap_content"
  	        android:text="@string/rfdevicebtn"
  	        android:textSize="15sp"
  	        android:textColor="@color/qianhei"/>
  		</LinearLayout>
  		
  	</LinearLayout>
  	
  	
  	
  	<LinearLayout 
  	    android:id="@+id/l2"
  	    android:layout_below="@id/l1"
  	    android:layout_width="fill_parent"
  	    android:layout_height="wrap_content"
  	    android:orientation="horizontal"
  	    android:layout_marginTop="15dp"
  	    android:gravity="center_vertical">
  	    
  	    <LinearLayout 
  	    android:id="@+id/btn_sdcard_record"
  	    android:layout_weight="1"
  	    android:layout_width="wrap_content"
  	    android:layout_height="wrap_content"
  	    android:orientation="vertical"
  	    android:gravity="center">
  	    <ImageView 
  	        android:layout_width="80dp"
  	        android:layout_height="80dp"
  	        android:src="@drawable/shap_sdrecord"/>
  	    <TextView 
  	        android:layout_width="wrap_content"
  	        android:layout_height="wrap_content"
  	        android:text="@string/sdcardbtn"
  	        android:textSize="15sp"
  	        android:textColor="@color/qianhei"/>
  		</LinearLayout>
  		
  		<LinearLayout 
  	    android:id="@+id/btn_cloud_record"
  	    android:layout_weight="1"
  	    android:layout_width="wrap_content"
  	    android:layout_height="wrap_content"
  	    android:orientation="vertical"
  	    android:layout_marginTop="2dp"
  	    android:gravity="center">
  	    <ImageView 
  	        android:layout_width="80dp"
  	        android:layout_height="80dp"
  	        android:src="@drawable/shap_cloud"/>
  	    <TextView 
  	        android:layout_width="wrap_content"
  	        android:layout_height="wrap_content"
  	        android:text="@string/cloudbtn"
  	        android:textSize="15sp"
  	        android:textColor="@color/qianhei"/>
  		</LinearLayout>
  	</LinearLayout>
  	
  	
  	
  	
  	  	<LinearLayout 
  	    android:layout_below="@id/l2"
  	    android:layout_width="fill_parent"
  	    android:layout_height="wrap_content"
  	    android:orientation="horizontal"
  	    android:layout_marginTop="15dp"
  	    android:gravity="center_vertical">
  	    
  	    <LinearLayout 
  	    android:id="@+id/btn_rtmp_setting"
  	    android:layout_weight="1"
  	    android:layout_width="wrap_content"
  	    android:layout_height="wrap_content"
  	    android:orientation="vertical"
  	    android:gravity="center">
  	    <ImageView 
  	        android:layout_width="80dp"
  	        android:layout_height="80dp"
  	        android:src="@drawable/set_rtmp_l"/>
  	    <TextView 
  	        android:layout_width="wrap_content"
  	        android:layout_height="wrap_content"
  	        android:text="@string/rtmpSet"
  	        android:textSize="15sp"
  	        android:textColor="@color/qianhei"/>
  		</LinearLayout>
  		
  	    
  	    <LinearLayout 
  	    android:layout_weight="1"
  	    android:layout_width="wrap_content"
  	    android:layout_height="wrap_content"
  	    android:orientation="vertical"
  	    android:gravity="center">
  	    <ImageView 
  	        android:layout_width="80dp"
  	        android:layout_height="80dp"
  	        android:src="@drawable/rec_img_png"/>
  	    <TextView 
  	        android:layout_width="wrap_content"
  	        android:layout_height="wrap_content"
  	        android:textSize="15sp"
  	        android:textColor="@color/qianhei"/>
  		</LinearLayout>
  
  	</LinearLayout>
  	
  	  	
  	</RelativeLayout>
   	
  	
  	
</LinearLayout>